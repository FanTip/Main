<div class="container">
    {{csrfToken}}
    <div class="row" style="margin-top:1%;">
        <dir class="col-sm-3">
            <ul class="list-group">
                <li class="list-group">
                    <span><img src="{{file}}" alt="..." class="rounded-circle" height="50px" width="50px">
                    <a href="/editImage">Edit Image</a></span>
                    {{name}}
                </li>
                <li class="list-group">
                    <a href="">Tip History</a>
                </li>
                <li class="list-group">
                    <a href="">Edit Profile</a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="list-group">
                    <a href="">Add Creators Profile</a>
                </li>
            </ul>
        </dir>
        <div class="col-sm-9 ">
            <h2>Edit Profile</h2>
                <form action="/profile" class="" method="POST">
                    <div class="form-group">
                        <label for="name">NAME</label> <br>
                        <input type="name" class="form-control" name="name" id="name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="email">EMAIL</label> <br>
                        <input type="email" class="form-control" name="email" id="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="des">Description</label> <br>
                        {{# if description }}
                            <input type="text" name="des" class="form-control" id="des" value="{{description}}">
                        {{else}}
                            <input type="text" class="form-control" name="des" id="des" placeholder="Tell us a little bit about you!">
                        {{/if}}
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    </div>
                    <button class="btn btn-primary">Save</button>
                </form>
        </div>
    </div>
</div>